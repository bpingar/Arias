<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bpingar.arias"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:name="com.bpingar.arias.activity.Arias"
        android:allowBackup="true"
        android:icon="@drawable/logo_arias"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.bpingar.arias.activity.MisComprasActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bpingar.arias.activity.NuevaCompraActivity"
            android:label="@string/nueva_compra_usuario" >
        </activity>
        <activity
            android:name="com.bpingar.arias.activity.InformacionAriasActivity"
            android:label="@string/menu_informacion_arias" >
        </activity>
        <activity
            android:name="com.bpingar.arias.activity.EstablecerUsuarioActivity"
            android:label="@string/establecer_usuario" >
        </activity>
        <activity android:name="com.bpingar.arias.activity.PreferenciasActivity" >
        </activity>
        <activity
            android:name="com.bpingar.arias.activity.UsuariosActivity"
            android:label="@string/title_activity_usuarios" >
        </activity>
        <activity
            android:name="com.bpingar.arias.activity.ItemListActivity"
            android:label="@string/title_item_list" >
        </activity>
        <activity
            android:name="com.bpingar.arias.activity.ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName=".ItemListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ItemListActivity" />
        </activity>
    </application>

</manifest>